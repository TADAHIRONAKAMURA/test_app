<h1>top登録ページ</h1>

<div>
<%= form_for(@spot) do |f| %>				
<h4>ポイントイメージ</h4>
<%= f.attachment_field :fishing_spot_image, placeholder:"ポイントイメージ", class:"" %>
<h4>釣りポイント</h4>
<%= f.text_field :fishing_spot_name, placeholder:"釣りポイント名を入力", class:"" %>
<h4>ポイント説明</h4>
<%= f.text_area :fishing_spot_body, placeholder:"pポイント説明文", class:"" %>
<%= f.submit class:"btn btn-primary data" %>
<% end %>
</div>
<div>
<table>
<h4><% @spots.each do |spot| %>
	<tr>
		<td><%= attachment_image_tag spot, :fishing_spot_image, :fill, 100, 100, format: "jpg" %></td>
		<td><%= spot.fishing_spot_name %></td>
		<td><%= spot.fishing_spot_body %></td>
		<td><%= link_to "編集", edit_fishing_spot_path(spot.id) %></td>
		<td><%= link_to "削除", fishing_spot_path(spot.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
<!-- <td><%#= link_to spot_path(spot.id), method: :delete, "data-confirm" => "本当に削除しますか？" do %><button class="btn btn-default btn-danger">削除</button><%# end %></td> -->

	</tr>
<% end %></h4>
</table>
</div>

